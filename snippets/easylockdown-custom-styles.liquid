{% if collection != blank %}
  {% assign primary_color = collection.metafields.custom.primary_color | append: '' %}
  {% assign primary_text_color = collection.metafields.custom.primary_text_color %}
  <style>
    #easylockdown-password-form {
      background-image: url({{ collection.metafields.custom.banner | file_url }});
      background-color: {{ primary_color | color_modify: 'alpha', 0.7 }};
      background-blend-mode: multiply;
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      min-height: 700px;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    #easylockdown-password-form::before {
      content: "{{ collection.title }}";
      font-size: 40px;
      font-weight: bold;
      line-height: 1.5;
      color: {{ primary_text_color }};
      /* set text align */
      text-align: center;
      /* set margin */
      margin-bottom: 20px;
      
    }

    #easylockdown-password-form #easylockdown-wrapper {
      /* align horizontaly and vertically center */
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      /* set max width */
      max-width: 600px;
      margin: 0 auto;
      /* set padding */
      padding: 20px;
      /* set background color */
      background-color: rgba(255, 255, 255, 0.8);
      /* set border radius */
      border-radius: 10px;
      /* set box shadow */
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    
      /* set font */
      font-size: 16px;
      line-height: 1.5;
      color: #000;
    
      /* set text align */
      text-align: center;
    }

    .template-collection .main-footer {
      margin-top: 0;
    }
  </style>
{% endif %}